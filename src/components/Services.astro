---
import { content } from "../data/content.js";
const services = content.services;
const waBase = content.whatsapp.split("?")[0];

const buildWhatsAppLink = (serviceName: string) => {
  const text = `Hola! Quiero reservar: ${serviceName} 游눗`;
  return `${waBase}?text=${encodeURIComponent(text)}`;
};
---

<section id="servicios" class="section">
  <div class="container">
    <div class="section-head">
      <h2>{services.title}</h2>
      <p>{services.subtitle}</p>
    </div>

    <!--
      Fix sem치ntico: eliminado role="list/listitem" en article.
      Si se quisiera lista sem치ntica, usar <ul>/<li>.
      Aqu칤 usamos card-grid con articles sin roles extra.
    -->
    <div class="card-grid">
      {services.items.map((s) => (
        <article class="card service-card">
          <div class="service-top">
            <h3 class="service-name">{s.name}</h3>
            <span class="service-price">{s.fromPrice}</span>
          </div>

          <p class="service-desc">{s.description}</p>

          <div class="service-actions">
            <!--
              Eliminado bot칩n "Ver ubicaci칩n" de cada card.
              Era ruido visual y sem치nticamente no pertenece a cada servicio.
              Si se necesita, va en una secci칩n CTA global.
            -->
            <a
              class="btn btn-primary btn-small"
              href={buildWhatsAppLink(s.name)}
              target="_blank"
              rel="noopener noreferrer"
            >
              Reservar este servicio
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>