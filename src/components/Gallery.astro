---
import { content } from "../data/content.js";
const gallery = content.gallery;
---

<section id="galeria" class="section">
  <div class="container">
    <div class="section-head">
      <h2>{gallery.title}</h2>
      <p>{gallery.subtitle}</p>
    </div>

    <!--
      Fix: <figure> sin <figcaption> es semánticamente incompleto.
      Cambiado a <div> — la info accesible ya está en el alt de la imagen.
      
      aria-labelledby apunta al h2 de la sección en lugar de aria-label
      redundante en el grid.
    -->
    <div class="gallery-grid">
      {gallery.items.map((img) => (
        <div class="gallery-item">
          <img
            src={img.src}
            alt={img.alt}
            loading="lazy"
            decoding="async"
            width="400"
            height="500"
          />
        </div>
      ))}
    </div>
  </div>
</section>