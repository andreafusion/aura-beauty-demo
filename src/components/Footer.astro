---
import { content } from "../data/content.js";
const year = new Date().getFullYear();
const waLink = content.whatsapp;
const footer = content.footer;
---

<style>
  footer {
    border-top: 1px solid var(--color-border);
    background: rgba(255, 255, 255, 0.35);
  }

  .footer-cta {
    padding: 34px 0 24px;
  }

  .footer-cta-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: calc(var(--radius) + 10px);
    box-shadow: var(--shadow-soft);
    padding: 22px;
    display: grid;
    gap: 12px;
    text-align: center;
  }

  .footer-cta-title {
    font-family: var(--font-heading);
    font-size: clamp(22px, 2.4vw, 30px);
    color: var(--color-text);
    letter-spacing: -0.01em;
    margin: 0;
  }

  .footer-cta-text {
    margin: 0 auto;
    color: var(--color-muted);
    font-size: 15px;
    line-height: 1.6;
    max-width: 60ch;
  }

  .footer-main {
    padding: 18px 0 24px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 18px;
    align-items: start;
  }

  .footer-brand {
    grid-column: span 6;
    display: grid;
    gap: 10px;
  }

  .footer-brand .name {
    font-family: var(--font-heading);
    font-size: 20px;
    color: var(--color-text);
    text-decoration: none;
  }

  .footer-brand p {
    margin: 0;
    color: var(--color-muted);
    font-size: 14px;
    line-height: 1.6;
  }

  .footer-col {
    grid-column: span 3;
    display: grid;
    gap: 10px;
  }

  .footer-col h4 {
    margin: 0;
    font-size: 14px;
    color: var(--color-text);
    font-weight: 600;
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 8px;
  }

  .footer-links a {
    text-decoration: none;
    color: var(--color-muted);
    font-size: 14px;
  }

  .footer-links a:hover {
    color: var(--color-text);
  }

  .footer-bottom {
    padding: 14px 0 18px;
    border-top: 1px solid var(--color-border);
    text-align: center;
    font-size: 13px;
    color: var(--color-muted);
  }

  @media (max-width: 900px) {
    .footer-brand {
      grid-column: span 12;
    }
    .footer-col {
      grid-column: span 6;
    }
  }

  @media (max-width: 560px) {
    .footer-col {
      grid-column: span 12;
    }
  }
</style>

<footer>
  <!-- CTA FINAL -->
  <div class="footer-cta">
    <div class="container">
      <div class="footer-cta-card">
        <h3 class="footer-cta-title">{footer.ctaTitle}</h3>
        <p class="footer-cta-text">{footer.ctaText}</p>

        <div>
          <a class="btn btn-primary" href={waLink} target="_blank" rel="noopener noreferrer">
            {footer.ctaButton}
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- FOOTER LINKS -->
  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-brand">
          <a class="name" href="/">{content.brand.name}</a>
          <p>Estética local en {content.brand.city}. Reserva rápida por WhatsApp.</p>
        </div>

        {footer.cols.map((col) => (
          <div class="footer-col">
            <h4>{col.title}</h4>
            <ul class="footer-links" role="list">
              {col.links.map((l) => (
                <li><a href={l.href}>{l.label}</a></li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- COPYRIGHT -->
  <div class="footer-bottom">
    <div class="container">
      © {content.brand.name} {year} — Demo estética local
    </div>
  </div>
</footer>