---
import { content } from "../data/content.js";
const year = new Date().getFullYear();
---

<style>
  footer {
    padding: 36px 0;
    border-top: 1px solid var(--color-border);
    /* Fix: eliminado margin-top: 80px
       Las secciones ya tienen padding-bottom propio.
       El margin-top duplicaba el espacio (80+80 = 160px de vacío). */
    text-align: center;
    font-size: 14px;
    color: var(--color-muted);
  }
</style>

<footer>
  <div class="container">
    © {content.brand.name} {year} — Demo estética local
  </div>
</footer>