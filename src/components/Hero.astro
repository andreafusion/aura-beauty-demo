---
import { content } from "../data/content.js";
const hero = content.hero;
---

<style>
  .hero {
  padding-top: 72px; /* espacio bajo navbar */
}

.grid {
  display: grid;
  grid-template-columns: 1.1fr 0.9fr;
  gap: 36px;
  align-items: center;
}

.kicker {
  display: inline-block;
  font-size: 13px;
  color: var(--color-muted);
  border: 1px solid var(--color-border);
  background: var(--color-surface);
  padding: 8px 12px;
  border-radius: 999px;
}

h1 {
  font-size: 44px;
  line-height: 1.05;
  margin-top: 16px;
  letter-spacing: -0.02em;
  color: var(--color-text);
}

.subheadline {
  margin-top: 14px;
  font-size: 16px;
  max-width: 52ch;
}

.actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  margin-top: 22px;
}

.card {
  background: var(--color-surface);
  border: 1px solid var(--color-border);
  border-radius: calc(var(--radius) + 4px);
  box-shadow: var(--shadow-soft);
  overflow: hidden;
}

.imageWrap {
  position: relative;
  aspect-ratio: 4 / 5;
  background: #eee;
}

.imageWrap img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.imageCaption {
  padding: 14px 16px 16px;
  border-top: 1px solid var(--color-border);
  color: var(--color-muted);
  font-size: 13px;
}

/* ✅ MÓVIL */
@media (max-width: 900px) {
  .hero {
    padding-top: 24px;
  }

  .grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }

  /* Tipografía más “hero”, sin verse mini */
  h1 {
    font-size: clamp(30px, 6.4vw, 36px);
    line-height: 1.08;
  }

  .subheadline {
    font-size: 16px;
  }

  /* Botones a ancho completo para que se sienta pro en móvil */
  .actions {
    flex-direction: column;
    align-items: stretch;
  }

  .actions a {
    width: 100%;
  }

  /* Imagen más protagonista y menos “foto pequeña” */
  .imageWrap {
    aspect-ratio: 16 / 10;
  }

  /* Chips más compactos */
  .chips {
    gap: 8px;
  }

  .chip {
    font-size: 12.5px;
    padding: 7px 10px;
  }
}
</style>

<section class="section hero">
  <div class="container">
    <div class="grid">
      <div>
        <span class="kicker">{content.brand.name} · {content.brand.city}</span>

        <h1>{hero.headline}</h1>
        <p class="subheadline">{hero.subheadline}</p>

        <div class="actions">
          <a class="btn btn-primary" href={hero.primaryCta.href} target="_blank" rel="noopener">
            {hero.primaryCta.label}
          </a>

          <a class="btn btn-secondary" href={hero.secondaryCta.href}>
            {hero.secondaryCta.label}
          </a>
        </div>

        <div class="chips" aria-label="Beneficios rápidos">
          {hero.badges.map((b) => (
            <span class="chip">{b}</span>
          ))}
        </div>
      </div>

      <div class="card" aria-label="Imagen principal">
        <div class="imageWrap">
          <img src={hero.image.src} alt={hero.image.alt} loading="eager" />
        </div>
        <div class="imageCaption">
          Reserva rápida, atención cercana, resultados que se notan.
        </div>
      </div>
    </div>
  </div>
</section>