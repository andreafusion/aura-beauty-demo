---
import { content } from "../data/content.js";
const hero = content.hero;
---

<style>
  .hero {
    position: relative;
    padding-top: 16px;
  }

  .hero::before {
    content: "";
    position: absolute;
    inset: -40px 0 auto 0;
    height: 420px;
    pointer-events: none;
    background:
      radial-gradient(
        600px 320px at 20% 20%,
        rgba(217, 165, 165, 0.18),
        transparent 60%
      ),
      radial-gradient(
        520px 280px at 80% 10%,
        rgba(217, 165, 165, 0.12),
        transparent 60%
      );
    filter: blur(2px);
    z-index: 0;
  }

  .hero .container,
  .hero .grid {
    position: relative;
    z-index: 1;
  }

  .grid {
    display: grid;
    grid-template-columns: 1.4fr 0.8fr;
    gap: 48px;
    align-items: center;
  }

  h1 {
    font-size: clamp(36px, 3.4vw, 52px);
    line-height: 1.05;
    margin-top: 14px;
    letter-spacing: -0.015em;
    color: var(--color-text);
    max-width: 18ch;
  }

  .subheadline {
    margin-top: 14px;
    font-size: 16px;
    max-width: 60ch;
    line-height: 1.6;
  }

  .actions {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-top: 22px;
  }

  .cta-note {
    margin-top: 10px;
    font-size: 13px;
    color: var(--color-muted);
  }

  /* Card de imagen */
  .hero-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: calc(var(--radius) + 10px);
    box-shadow: var(--shadow-soft);
    overflow: hidden;

    /* ✅ clave: que el card NO se estire y quede a la derecha */
    width: 100%;
    max-width: 420px;
    justify-self: end;
  }

  .imageWrap {
    width: 100%;
    aspect-ratio: 3 / 4;
  }

  .imageWrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .imageCaption {
    padding: 12px 16px 14px;
    border-top: 1px solid var(--color-border);
    color: var(--color-muted);
    font-size: 13px;
    line-height: 1.4;
    text-align: center;
    letter-spacing: 0.01em;
  }

  /* ── Móvil ── */
  @media (max-width: 900px) {
    .hero {
      padding-top: 8px;
    }

    .grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    h1 {
      font-size: clamp(30px, 7vw, 38px);
      line-height: 1.08;
      max-width: 22ch;
    }

    .imageWrap {
      aspect-ratio: 16 / 9;
      max-width: 100%;
      margin-left: 0;
    }

    .actions {
      flex-direction: column;
      align-items: stretch;
    }

    .actions a {
      text-align: center;
    }
  }
</style>

<section class="section hero">
  <div class="container">
    <div class="grid">
      <!-- Columna de texto -->
      <div>
        <h1>{hero.headline}</h1>
        <p class="subheadline">{hero.subheadline}</p>

        <div class="actions">
          <a
            class="btn btn-primary"
            href={hero.primaryCta.href}
            target="_blank"
            rel="noopener noreferrer"
          >
            {hero.primaryCta.label}
          </a>
          <a class="btn btn-secondary" href={hero.secondaryCta.href}>
            {hero.secondaryCta.label}
          </a>
        </div>

        <p class="cta-note">Respuesta en menos de 24h</p>
      </div>

      <!-- Columna de imagen -->
      <div class="hero-card" aria-hidden="true">
        <div class="imageWrap">
          <img
            src={hero.image.src}
            alt={hero.image.alt}
            loading="eager"
            decoding="sync"
            width="420"
            height="560"
          />
        </div>

        <p class="imageCaption">
          Reserva rápida, atención cercana, resultados que se notan.
        </p>
      </div>
    </div>
  </div>
</section>
