---
import { content } from "../data/content.js";
const location = content.location;
// Fix: ahora usa el campo dedicado en lugar de acoplarse a hero.primaryCta
const waLink = content.whatsapp;
---

<section id="ubicacion" class="section">
  <div class="container">
    <div class="section-head">
      <h2>{location.title}</h2>
      <p>{location.subtitle}</p>
    </div>

    <div class="location-grid">
      <div class="location-info">
        <div class="location-card">
          <h3>Dirección</h3>
          <p>{location.address}</p>
        </div>

        <div class="location-card">
          <h3>Horario</h3>
          <div class="schedule">
            {location.schedule.map((s) => (
              <div class="schedule-item">
                <span>{s.day}</span>
                <span>{s.hours}</span>
              </div>
            ))}
          </div>
        </div>

        <a
          class="btn btn-primary"
          href={waLink}
          target="_blank"
          rel="noopener noreferrer"
        >
          Reservar cita por WhatsApp
        </a>
      </div>

      <div class="map">
        <!-- Fix: añadido title para accesibilidad (requerimiento WCAG) -->
        <iframe
          src={location.mapEmbed}
          title="Mapa con la ubicación de Aura Beauty"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          allowfullscreen
        ></iframe>
      </div>
    </div>
  </div>
</section>